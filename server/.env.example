# Project Settings
PROJECT_NAME=OctaPulse Aquaculture Analysis API
VERSION=1.0.0
API_V1_STR=/api/v1

# CORS Settings (as JSON array)
ALLOWED_HOSTS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000","http://127.0.0.1:3001"]

# Model Configuration
MODEL_PATH=documents/best.pt
GRID_SQUARE_SIZE_INCHES=1.0

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
MAX_BATCH_SIZE=100
MAX_TOTAL_BATCH_SIZE=2147483648

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Storage Configuration - CHANGE TO s3 TO USE S3
STORAGE_TYPE=s3
S3_BUCKET_NAME=octapulse-images
S3_REGION=us-east-1
S3_ENDPOINT_URL=
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
S3_USE_SSL=true

# Memory storage fallback (used when STORAGE_TYPE=memory)
MEMORY_STORAGE_MAX_SIZE_MB=500
MEMORY_STORAGE_MAX_OBJECTS=1000

# Job queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0